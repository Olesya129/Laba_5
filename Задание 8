import java.util.Scanner;

public class задание8 {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите номер дня недели:");
        System.out.println("1-Понедельник");
        System.out.println("2-Вторник");
        System.out.println("3-Среда");
        System.out.println("4-Четверг");
        System.out.println("5-Пятница");
        System.out.println("6-Суббота");
        System.out.println("7-Воскресенье");
        int r = scan.nextInt();
        switch (r){
            case 1:
                System.out.println("Синупрет-2, олифрин-1, бисопролол-1");
            break;
            case 2:
                System.out.println("Синупрет-2, олифрин-1");
            break;
            case 3:
                System.out.println("Синупрет-2, олифрин-1, бисопролол-1, левомеколь-1");
            break;
            case 4:
                System.out.println("Синупрет-2, олифрин-1, амлодипин-1");
            break;
            case 5:
                System.out.println("Синупрет-2, олифрин-1, левомеколь-1");
            break;
            case 6:
                System.out.println("Синупрет-2, олифрин-1, бисопролол-1, амлодипин-1");
            break;
            case 7:
                System.out.println("Синупрет-2, олифрин-1, амлодипин-1, левомеколь-1");
            break;
        }
    }
}
