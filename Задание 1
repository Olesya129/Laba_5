import java.util.Scanner;
import static java.lang.Math.*;

public class задание1 {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите какое преобразование вы хотите выполнить:");
        System.out.println("1-Преобразование из градусов в радианы");
        System.out.println("2-Преобразование из радиан в градусы");
        int r = scan.nextInt();
        switch (r) {
            case 1:
                System.out.println("Введите угол в градусах");
                double x = scan.nextDouble(), f;
                f = x * (PI / 180);
                System.out.println("Угол в радианах = " + f);
                break;
            case 2:
                System.out.println("Введите угол в радианах");
                double y = scan.nextDouble(), F;
                f = y * (180 / PI);
                System.out.println("Угол в градусах = " + f);
                break;
        }
    }
}
